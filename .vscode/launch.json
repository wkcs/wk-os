    "version": "0.2.0",
    "configurations": [
        {
            "name": "STM32 Launch",
            "type": "cppdbg",
            "request": "launch",
            "targetArchitecture": "arm",
            "MIMode": "gdb",
            "logging": {
                "engineLogging": true,
                "moduleLoad": false,
                "exceptions": false,
                "trace": false,
                "traceResponse": false
            },
            "customLaunchSetupCommands": [
                {
                    "text": "target remote :3333",
                    "description": "connect to remote target",
                    "ignoreFailures": false
                },
                {
                    "text": "monitor reset halt",
                    "description": "halt",
                    "ignoreFailures": false
                },
                {
                    "text": "file /home/wkcs/projects/wk-os/out/wk_os.elf",
                    "description": "load symbols",
                    "ignoreFailures": false
                },
                {
                    "text": "load",
                    "description": "load to remote MCU",
                    "ignoreFailures": false
                },
                {
                    "text": "break wkos_start",
                    "description": "halt",
                    "ignoreFailures": false
                },
            ],
            "launchCompleteCommand": "None",
            "program": "${workspaceRoot}/out/wk_os.elf",
            "args": [
                "target remote localhost:3333"
            ],
            "stopAtEntry": true,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": true,
            "filterStderr": true,
            "filterStdout": false,
            //"preLaunchTask": "make debug",
            "miDebuggerServerAddress": "localhost:3333",
            "serverLaunchTimeout": 5000,
            "linux": {
                "MIMode": "gdb",
                "miDebuggerPath": "arm-none-eabi-gdb",
                "serverStarted": "target halted due to debug-request, current mode: Thread",
                "debugServerPath": "openocd",
                "debugServerArgs": "-f \"/home/wkcs/projects/wk-os/arch/arm/board/keyboard/openocd.cfg\" -c init -c \"reset halt\""
            }
        }
    ]
}